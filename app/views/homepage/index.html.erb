        <label for="team_name"><strong>Nome da equipa</strong></label>
      </div>
    </div>
    <div class="row">
      <label style="padding-left: 10px;"><strong>Utilizadores na equipa</strong></label>

      <div class="input-field col s12" style="padding: 0px; height: 150px; overflow-y: auto; width: 100%;">
        <form action="#">
              <span>
                <input type="checkbox" checked id="usr1"/>
                <label for="usr1">Utilizador numero 1</label>
              </span>
          <br>
              <span>
                <input type="checkbox" id="usr2"/>
                <label for="usr2">Utilizador numero 2</label>
              </span>
          <br>
              <span>
                <input type="checkbox" checked id="usr3"/>
                <label for="usr3">Utilizador numero 3</label>
              </span>
          <br>
              <span>
                <input type="checkbox" checked id="usr4"/>
                <label for="usr4">Utilizador numero 4</label>
              </span>
          <br>
              <span>
                <input type="checkbox" id="usr5"/>
                <label for="usr5">Utilizador numero 6</label>
              </span>
          <br>
              <span>
                <input type="checkbox" checked id="usr6"/>
                <label for="usr6">Utilizador numero 7</label>
              </span>
          <br>
              <span>
                <input type="checkbox" id="usr7"/>
                <label for="usr7">Utilizador numero 8</label>
              </span>
        </form>
      </div>
    </div>
    <div class="row" style="padding-top: 10px;">
      <div class="input-field col s12">
        <select style="z-index: 10000;">
          <option value="">Escolha um dos utilizadores</option>
          <option value="1">Utilizador 1</option>
          <option value="2" selected>Utilizador 2</option>
          <option value="3">Utilizador 3</option>
        </select>
        <label><strong>Escolher responsável da equipa</strong></label>
