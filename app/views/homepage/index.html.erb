<div id="sidebar" class="sidebar sidebar-right collapsed" style="max-height: 75%; min-height: 200px;">
  <!-- Nav tabs -->
  <div class="sidebar-tabs">
    <ul role="tablist">
      <li>
        <a href="#profile" role="tab">
          <%= tag("img", class: 'profile_name', data: {name: current_user.first_name}) %>
        </a>
      </li>
      <li>
        <!--<a href="#teams" role="tab" class="cyan lighten-4">-->
        <a href="#teams" role="tab">
          <i class="material-icons extra-padding">group</i>
        </a>
      </li>
      <li>
        <!--<a href="#users" role="tab" class="cyan lighten-3">-->
        <a href="#users" role="tab">
          <i class="material-icons extra-padding">person_outline</i>
        </a>
      </li>
      <li>
        <!--<a href="#warnings" role="tab" class="cyan lighten-4">-->
        <a href="#warnings" role="tab">
          <i class="material-icons extra-padding">warning</i>
        </a>
      </li>
      <li>
        <!--<a href="#search" role="tab" class="cyan lighten-3">-->
        <a href="#search" role="tab">
          <i class="material-icons extra-padding">search</i>
        </a>
      </li>
    </ul>

    <ul role="tablist">
      <!--<li>-->
      <!--<a href="#settings" role="tab">-->
      <!--<i class="fa fa-gear"></i>-->
      <!--</a>-->
      <!--</li>-->
      <li>
        <a href="#about_sidebar" role="tab">
          <i class="material-icons extra-padding">help</i>
        </a>
      </li>
    </ul>
  </div>

  <!-- Tab panes -->
  <div class="sidebar-content">
    <div class="sidebar-pane" id="profile">
      <h1 class="sidebar-header" style="font-weight: 300">Bem vindo <%= current_user.first_name %>!
        <div class="sidebar-close"><i class="fa fa-caret-right"></i></div>
      </h1>

      <div class="list_wrapper">
        <div class="row valign-wrapper" style="margin-top: 20px">
          <div class="col s5">
            <!--<img src="images/sec-estado-jorge-barreto-xavier.jpg" alt="" class="circle responsive-img">-->
            <%= image_tag current_user.avatar.url(:medium), class: 'circle responsive-img' %>
          </div>
          <div class="col s7">
            <h5 style="font-weight: 300"><%= current_user.full_name %></h5>
            <hr>
            <span><%= current_user.profile %></span><br>
            <span>Registado há 100 dias</span>
          </div>
        </div>
        <div class="row">
          <%= link_to 'Encerrar sessão', destroy_user_session_path, :method => :delete %><br>
          <%= link_to 'Perfil do utilizador', current_user, :method => :get %>
        </div>
      </div>

    </div>

    <div class="sidebar-pane" id="teams">
      <h1 class="sidebar-header" style="font-weight: 300">Equipas
        <!--<a class="waves-effect waves-teal btn modal-trigger right" onclick="" -->
        <!--style="width: 53px; height: 33px; padding-left: 7px; padding-right: 10px; margin-top: 3px;" -->
        <!--href="#create_team_modal">-->
        <!--<i class="material-icons md-24 md-light">group_add</i>-->
        <!--</a>-->
        <!--&lt;!&ndash; botao que apresenta/esconde as checkboxes &ndash;&gt;-->
        <!--<a class="waves-effect waves-teal btn right" -->
        <!--style="width: 53px; height: 33px; padding-left: 7px; padding-right: 7px; margin-top: 3px; margin-right: 10px;">-->
        <!--<i class="fa fa-check-square-o"></i>-->
        <!--</a>-->

        <div class="sidebar-close">
          <i class="fa fa-caret-right"></i>
        </div>
      </h1>


      <div class="list_wrapper">
        <p class="center" style="font-weight: 300;">A mostrar as 15 equipas alteradas recentemente</p>
        <ul id="recent_teams_list" class="collapsible" data-collapsible="accordion" style="margin-right: 10px;">

          <% @recently_changed_teams.each do |team| %>
              <li>
                <div class="collapsible-header">
                  <%= team.name %>
                  <%= link_to team, method: :get, :data => {:position => 'left', :delay => '15',
                                                            :tooltip => 'Ver mais detalhes'},
                              class: 'tooltipped edit-team-btn waves-effect waves-teal btn-flat right' do %>
                      <i class="material-icons">more_vert</i>
                  <% end %>
                </div>
                <div class="collapsible-body">
                  <ul class="collection">

                    <% TeamMember.where(team_id: team.id).order(is_leader: :desc).each do |t_member| %>
                        <% @t_user = User.find_by(id: t_member.user_id) %>

                        <li class="collection-item avatar team-list-item">

                          <% if (t_member.is_leader) %>
                              <!-- RIBBON PARA INDICAR O CHEFE DE EQUIPA -->
                              <div class="corner-ribbon top-right red shadow">Chefe</div>
                          <% end %>

                          <%= image_tag @t_user.avatar.url, class: 'circle' %>
                          <span class="title" style="font-weight: 300">
                              <%= @t_user.first_name %> <%= @t_user.last_name %>
                          </span><br>

                          <!-- TODO: CRIAR TABELA PARA PERFIS E MUDAR ISTO! -->
                          <p>Administrador</p>
                        </li>
                    <% end %>

                  </ul>
                </div>
              </li>
          <% end %>

        </ul>
        <div class="center" style="margin-bottom: 10px;">
          <%= link_to teams_url, method: :get, class: 'waves-effect waves-light btn' do %>
              Ver todas
          <% end %>
        </div>
      </div>
    </div>

    <div class="sidebar-pane" id="warnings">
      <h1 class="sidebar-header" style="font-weight: 300">
        Alertas ativos
        <span class="badge new" style="line-height: 30px; margin-top: 5px;">4</span>

        <div class="sidebar-close">
          <i class="fa fa-caret-right"></i>
        </div>
      </h1>

      <div class="list_wrapper" style="padding-right: 10px;">
        <div class="card green">
          <div class="card-content card-reduced-padding-top">
            <h5 class="black-text" style="font-weight: 300">Situação regularizada</h5>
            <span><i class="material-icons md-18">schedule</i> 20 Out, 12h - infinito</span>
            <br>
            <span><i class="material-icons md-18">map</i> Todo o território nacional</span>
          </div>
        </div>
        <div class="card yellow">
          <div class="card-content">
            <h5 class="black-text" style="font-weight: 300">Agitação Marítima</h5>
            <span><i class="material-icons md-18">schedule</i> 21 Set, 17h - 25 Set, 12h</span>
            <br>
            <span><i class="material-icons md-18">map</i> Setúbal, Lisboa, Santarém</span>
            <br>
            <span><i class="material-icons md-18">comment</i> São esperadas ondas com cerca de 7 metros de altura.</span>
          </div>
        </div>
        <div class="card red">
          <div class="card-content">
            <h5 class="black-text" style="font-weight: 300">Temperaturas Elevadas</h5>
            <span><i class="material-icons md-18">schedule</i> 25 Set, 12h - 30 Set, 12h</span>
            <br>
            <span><i class="material-icons md-18">map</i> Vila Real, Viseu, Guarda, Portalegre, Beja, Setúbal</span>
            <br>
            <span><i class="material-icons md-18">comment</i> Temperaturas superiores a 40ºC.</span>
          </div>
        </div>
        <div class="card orange">
          <div class="card-content">
            <h5 class="black-text" style="font-weight: 300">Vento Forte</h5>
            <span><i class="material-icons md-18">schedule</i> 30 Set, 12h - 20 Out, 12h</span>
            <br>
            <span><i class="material-icons md-18">map</i> Évora, Faro, Beja</span>
            <br>
            <span><i class="material-icons md-18">comment</i> Vai tar uma ventania dos diabos, é melhor um gajo ter cuidado.</span>
          </div>
        </div>
      </div>
    </div>

    <div class="sidebar-pane" id="users">
      <h1 class="sidebar-header" style="font-weight: 300">Utilizadores mais ativos
        <div class="sidebar-close"><i class="fa fa-caret-right"></i></div>
      </h1>
      <div class="list_wrapper" style="padding-right: 10px;">
        <p class="center" style="font-weight: 300;">A mostrar os 15 utilizadores mais ativos</p>
        <ul class="collection" style="margin-bottom: 7.5px;">

          <% @most_active_users.each do |user| %>
              <li class="collection-item avatar">
                <%= image_tag user.avatar.url(:thumb), class: 'circle responsive-img' %>
                <span class="title" style="font-weight: 300">

                  <%= link_to user, method: :get,
                              class: '' do %>
                      <%= user.first_name %> <%= user.last_name %>
                  <% end %>
                </span>

                <p><%= user.email %></p>
              </li>
          <% end %>

        </ul>
        <div class="center" style="margin-bottom: 10px;">
          <%= link_to users_url, method: :get, class: 'waves-effect waves-light btn' do %>
              Ver todos
          <% end %>
        </div>
      </div>

    </div>

    <div class="sidebar-pane" id="search">
      <h1 class="sidebar-header">Teste Localização
        <div class="sidebar-close"><i class="fa fa-caret-right"></i></div>
      </h1>
      <div class="list_wrapper" style="padding-right: 10px;">
        <p class="center" style="font-weight: 300;">UPDATES DA LOCALIZAÇÃO ATUAL!</p>
        <ul id="current_position_list" class="collection" style="margin-bottom: 7.5px;">

        </ul>
      </div>
    </div>

    <div class="sidebar-pane" id="about_sidebar">
      <h1 class="sidebar-header" style="font-weight: 300">Acerca do projeto
        <div class="sidebar-close"><i class="fa fa-caret-right"></i></div>
      </h1>
    </div>
  </div>
</div>

<div id="map"></div>

<div id="location_div">
  <div id="location_symbol">
    <i class="material-icons">my_location</i>
  </div>
  <div id="curr_location">
    <div>
      <span class="truncate">Santa Eugénia, Alijó.</span>
    </div>
  </div>
</div>


<!-- Modal Structure -->
<div id="confirm_entity_creation" class="modal modal-fixed-footer">
  <div class="modal-header">
    <h5>Confirmar criação de entidade</h5>
  </div>

  <div class="modal-content">
    <div class="row">
      <div id="e_type_div" class="col s4">
        <span class="modal-element-title">Tipo</span>
        <br>
        <span id="e_type"></span>
      </div>
      <div hidden id="e_radius_div" class="col s6">
        <span class="modal-element-title">Raio (m)</span>
        <br>
        <span id="e_radius"></span>
      </div>
      <div hidden id="e_area_div" class="col s4">
        <span class="modal-element-title">Área (km<sup>2</sup>)</span>
        <br>
        <span id="e_area"></span>
      </div>
      <div hidden id="e_length_div" class="col s4">
        <span class="modal-element-title">Comprimento (km)</span>
        <br>
        <span id="e_length"></span>
      </div>
      <div hidden id="e_num_points_div" class="col s4">
        <span class="modal-element-title">Nº pontos</span>
        <br>
        <span id="e_num_points"></span>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="e_name" value="" type="text" class="validate" autofocus>
        <label for="e_name">Nome da entidade</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea id="e_description" class="materialize-textarea"></textarea>
        <label for="e_description">Descrição</label>
      </div>
    </div>
    <div class="row">
      <div id="e_coords_div" class="input-field col s12">
        <textarea id="e_coords" class="materialize-textarea"></textarea>
        <label for="e_coords">Coordenadas</label>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a id="submit_new_geo_entity" href="javascript:insertGeoEntity();"
       class="modal-action modal-close waves-effect waves-green btn-flat">Confirmar</a>
    <a href="" class="modal-action modal-close waves-effect waves-green btn-flat">Cancelar</a>
  </div>
</div>