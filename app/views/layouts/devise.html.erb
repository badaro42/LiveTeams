<%# encoding: utf-8 %>

<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag 'welcome.css' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="row">
  <div class="col s10 m8 l6 offset-l3 offset-m2 offset-s1">
    <div class="card-panel main-card">

      <h4 class="center-align project-title">
        Projeto <strong>Gestão de Emergência</strong>
      </h4>

      <hr>

      <h5 class="center-align">
        <%= yield(:page_purpose) %>
      </h5>

      <h6 class="center-align">
        <%= yield(:guide_message) %>
        <%= yield(:devise_links) %>
      </h6>

      <hr class="hr-extra-spacing">

      <%= yield %>

      <hr class="nice-trick">

    </div>
  </div>
</div>

</body>
</html>