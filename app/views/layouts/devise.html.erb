<%# encoding: utf-8 %>

<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

  <%= include_gon(watch: true) %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag 'devise' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'devise' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'shared/flash_messages' if !flash.empty? %>

<div class="row">
  <div class="col s10 m8 l6 push-l3 push-m2 push-s1">
    <div class="card-panel main-card">

      <h4 class="center-align project-title">
        Projeto <strong>LiveTeams</strong>
      </h4>

      <hr style="width: 90%;">

      <h5 class="center-align">
        <%= yield(:page_purpose) %>
      </h5>

      <h6 class="center-align">
        <%= yield(:guide_message) %>
        <%= yield(:devise_links) %>
      </h6>

      <hr class="hr-extra-spacing" style="width: 90%; margin-bottom: 30px;">

      <%= yield %>

      <hr class="nice-trick">

    </div>
  </div>
</div>

</body>
</html>