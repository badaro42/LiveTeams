<%# encoding: utf-8 %>

<% @show_search_stuff = false %>
<% content_for :title, "Equipas :: GestãoEmergência" %>
<% content_for :page_purpose, "Equipas" %>

<% content_for :model_actions do %>
    <%= link_to edit_team_path(@team), :data => {:position => 'bottom', :delay => '15',
                                         :tooltip => 'Editar equipa'},
                class: 'tooltipped navbar-button', method: :get do %>
        <i class="material-icons md-36">edit</i>
    <% end %>
<% end %>

<% content_for :back_page do %>
    <%= link_to teams_path, :data => { :position => 'bottom', :delay => '15', :tooltip => 'Voltar para as equipas' },
                class: 'tooltipped navbar-button', method: :get do %>
        <i class="material-icons md-36 white-text">arrow_back</i>
    <% end %>
<% end %>

<!--<p id="notice"><%= notice %></p>-->

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Latlon:</strong>
  <%= @team.latlon %>
</p>

<%= link_to 'Edit', edit_team_path(@team) %> |
