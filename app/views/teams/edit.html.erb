<%# encoding: utf-8 %>

<% content_for :title, "Editar '" + @team.name.to_s + "' :: LiveTeams Portugal" %>

<% content_for :navbar_buttons do %>
    <li>
      <%= link_to root_path, class: 'navbar-button', method: :get do %>
          Mapa
      <% end %>
    </li>
    <li>
      <%= link_to evaluation_form_path, class: 'evaluation_form_link navbar-button', method: :get do %>
          Questionário
      <% end %>
    </li>
    <% if can_perform_action? :read, UserRole %>
        <li>
          <%= link_to permissions_path, class: 'navbar-button', method: :get do %>
              Permissões
          <% end %>
        </li>
    <% end %>
    <li>
      <%= link_to teams_path, class: 'navbar-button active', method: :get do %>
          Equipas
      <% end %>
    </li>
    <li>
      <%= link_to users_path, class: 'navbar-button', method: :get do %>
          Membros
      <% end %>
    </li>
<% end %>

<div class="white z-depth-1">
  <div class="row" style="margin: 20px; padding-bottom: 15px;">
    <h3 style="margin-top: 0; padding-top: 25px; margin-bottom: 25px; font-weight: 200;">
      Editar <span style="font-weight: 300;"><%= @team.name %></span>
    </h3>

    <%= render 'form' %>
  </div>
</div>