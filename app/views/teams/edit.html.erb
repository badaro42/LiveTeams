<%# encoding: utf-8 %>

<% @create_new_team = false %>
<% @show_search_stuff = false %>
<% @show_new_team_btn = false %>
<% content_for :title, "Editar equipa :: PROCIV Portugal" %>

<% content_for :back_page do %>
    <%= link_to @team, :data => {:position => 'right', :delay => '15', :tooltip => 'Voltar para a equipa '+@team.id.to_s},
                class: 'tooltipped navbar-button', method: :get do %>
        <i class="material-icons md-36 white-text">arrow_back</i>
    <% end %>
<% end %>

<% content_for :navbar_buttons do %>
    <li>
      <%= link_to root_path, class: 'navbar-button', target: '_blank', method: :get do %>
          Mapa
      <% end %>
    </li>
    <li>
      <%= link_to teams_path, class: 'navbar-button active', target: '_blank', method: :get do %>
          Equipas
      <% end %>
    </li>
    <li>
      <%= link_to users_path, class: 'navbar-button', target: '_blank', method: :get do %>
          Membros
      <% end %>
    </li>
<% end %>

<div class="white z-depth-2">
  <div class="row" style="margin: 20px; padding-bottom: 15px;">
    <%= render 'form' %>
  </div>
</div>