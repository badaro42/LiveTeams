<%# encoding: utf-8 %>

<div class="row">
  <div class="col s8 m6 l4 offset-l4 offset-m3 offset-s2">
    <div class="card-panel" style="padding-bottom: 10px; margin-top: 15px;">

      <h4 class="center-align" style="margin-top: 5px; margin-bottom: 25px;">
        Projeto <strong>Gestão de Emergência</strong>
      </h4>
      <hr>
      <h5 class="center-align">Autenticação</h5>

      <h6 class="center-align">Ainda não tem conta? <%= render "devise/shared/links" %></h6>
      <hr style="margin-bottom: 17.5px; margin-top: 15px;">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="input-field col s12 m12 l12">
            <%= f.label "Endereço de email" %>
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="input-field col s12 m12 l12">
            <%= f.label "Password (mínimo 8 caracteres)" %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="col s12 m12 l12" style="margin-top: 10px;">
                <%= f.check_box :remember_me %>
                <%= f.label "Guardar dados?" %>
              </div>
          <% end -%>

          <div class="actions col s12 m12 l12" style="margin-top: 25px; margin-bottom: 20px;">
            <%= f.button 'Entrar!', class: "btn waves-effect waves-light" %>
          </div>

      <% end %>

      <hr style="margin: 0px; border-bottom-width: 0px; border-top-width: 0px;">

    </div>
  </div>
</div>