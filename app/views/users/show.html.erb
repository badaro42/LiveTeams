<% @show_search_stuff = false %>
<% content_for :title, @user.full_name + " :: PROCIV Portugal" %>

<% content_for :model_actions do %>
    <% if current_user.id == @user.id %>
        <div class="fixed-action-btn" style="bottom: 25px; right: 25px;">
          <%= link_to edit_user_registration_path, :data => {:position => 'left', :delay => '0',
                                                             :tooltip => 'Editar utilizador'},
                      class: 'btn-floating btn-large red tooltipped', method: :get do %>
              <i class="large material-icons">mode_edit</i>
          <% end %>
        </div>
    <% elsif current_user.profile == User::ADMINISTRADOR %>
        <div class="fixed-action-btn" style="bottom: 25px; right: 25px;">
          <%= link_to edit_user_path(@user), :data => {:position => 'left', :delay => '0',
                                                       :tooltip => 'Editar utilizador'},
                      class: 'btn-floating btn-large red tooltipped', method: :get do %>
              <i class="large material-icons">mode_edit</i>
          <% end %>
        </div>
    <% end %>
<% end %>

<% content_for :navbar_buttons do %>
    <li>
      <%= link_to root_path, class: 'navbar-button', target: '_blank', method: :get do %>
          Mapa
      <% end %>
    </li>
    <li>
      <%= link_to teams_path, class: 'navbar-button', target: '_blank', method: :get do %>
          Equipas
      <% end %>
    </li>
    <li>
      <%= link_to users_path, class: 'navbar-button active', target: '_blank', method: :get do %>
          Membros
      <% end %>
    </li>
<% end %>


